<div class="container">
  <div class="jumbotron">
    <h1><%= @article.title %></h1>

    <p>
      <%= @article.text %>
    </p>
  </div>

  <h4>Comments:</h4>
  <%= render @article.comments %>

  <h4>Add a comment:</h4>
  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
</div>